{
    "name": "ilexn/result-option",
    "type": "library",
    "description": "rust like result and option",
    "license": "MIT",
    "keywords": ["result-enum"],
    "authors": [
        {
            "name": "iLexN",
            "email": "ilex.job@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "infection/infection": "^0.22.1",
        "phpbench/phpbench": "1.0.0-beta1",
        "phpstan/phpstan": "^0.12.84",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.10.11",
        "vimeo/psalm": "^4.7"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ilex\\PackageName\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ilex\\PackageName\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test-test": "vendor/bin/infection --threads=4",
        "bug-check": "phpstan analyse -l max src",
        "psalm": "psalm",
        "rector-check": "rector process src --config rector-ci.php --dry-run",
        "rector-fix": "rector process src --config rector-ci.php",
        "benchmark": "phpbench run --report=aggregate --retry-threshold=5 --progress=none"
    }
}
